<div class="posts-wrapper row">
  <div class="post">
    <div class="post-head">
      Posted by somaniyaaa
    </div>
  </div>
  <div class="name">
    <div class="image center-block">
      <%=image_tag @post.image.url(:medium)%>
      <p class="title">
        <%=@post.title %>
      </p>
      <% if @post.user.id== current_user.id %>

        <div class="text-center edit-links">
          <%=link_to "Back to Post images", posts_path, class: "btn btn-primary" %>
          <%=link_to "Edit Post", edit_post_path(@post),  class: "btn btn-success" %>
          <%=link_to "Delete Post", post_path(@post), method: :delete,data: { confirm: "Are you sure ?"},  class: "btn btn-danger" %>
        </div>

        <% else %>

        <div class="text-center edit-links">
          <%= link_to "Back to Post images", posts_path, class: "btn btn-primary" %>
        </div>
        <% end %>
    </div>
  </div>
</div>
